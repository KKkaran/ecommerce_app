<div class="container header text-emerald-500">
        <h1 class="text-emerald-500 text-2xl">Welcome, 
            {{#if posts.login}}
                {{posts.username}}
            {{else}}
                Guest
            {{/if}}
        </h1>
</div>
<br>
<div class="container">
    <div class="text-gray-900 ">
        <select name="categories" id="categ" class="bg-gray-300">
            <option value="">Pick a category</option>
        {{#each posts.categories as |c|}}
            <option value={{c.category_name}}>{{c.category_name}}</option>
        {{/each}}
    </select>
        <button class="shortlist bg-emerald-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Search</button>
    </div>
    <br>
    {{#if posts}}
        <div class="">
            <ol class="container posts">    
            {{#each posts.posts as |post| }}
                <div class="card {{post.category.category_name}}">
                    <div class="card-header">
                        <div class="d-flex justify-content-between text-left">
                            <div class = "text-gray-700 "><a class="hover:bg-blue-200 text-md font-black" href="/singlePost/{{post.id}}">{{post.title}} </a> <br> <span class="text-xs font-bold">
                                {{post.user.username}}
                            </span>
                            
                            </div> <div class="text-right text-xs font-bold"> <span class="text-gray-700 bg-white-200 ">{{post.date}}</span></div>
                        </div>
                    </div>
                    <div class="card-body bg-gray-700 text-white">
                        <h4 class="card-text text-white">{{post.description}}</h4>  
                    </div>            
                </div>
                <br>
            {{/each}}
            </ol>
        </div>
    {{else}}
        <h1>No posts to display</h1>
    {{/if}} 
</div>

<script src="https://cdn.tailwindcss.com"></script>
<script src="/js/homepage.js"></script>