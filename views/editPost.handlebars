<div class="container p-3 dashboard">
    
    <form>
    <div class="form-group form-editPost" data-postId={{post.id}}>
        <label for="postTitle">Title of Post:</label>
        <textarea style="resize: none;" onkeyup="gray()" class="form-control"  id="title" rows="1"  required >{{post.title}}</textarea>
    </div>
    
        <br>
    <div class="form-group">
        <label for="description">Post Description:</label>
        <textarea class="form-control" onkeyup="gray()" id="description" rows="8"  required >{{post.description}}</textarea>
    </div>
        <br>
    <div>
        <button type="submit" class="bg-emerald-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline go" disabled>Update</button>
    </div>
    </form>
</div>

<script src="/js/editPost.js"></script>